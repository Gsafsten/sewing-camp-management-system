}

/* Menu items in navigation bar */
.navbar-menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    flex-wrap: wrap;
}

.navbar-item {
    position: relative;
}

/* Navigation links styling - white text with hover and active states */
.navbar-item a {
    display: block;
    padding: 18px 16px;
    color: #fff;
    text-decoration: none;
