}

/* Admin button styling - blue gradient */
.btn-admin {
    background: linear-gradient(135deg, #0b63ff, #0452d4);
    color: #fff;
    padding: 10px 18px;
    border: none;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    font-size: 13px;
    cursor: pointer;
    transition: box-shadow 0.3s, transform 0.2s;
}

.btn-admin:hover {
    box-shadow: 0 6px 16px rgba(11, 99, 255, 0.35);
